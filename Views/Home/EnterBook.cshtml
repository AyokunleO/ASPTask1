@model Book
@{
    ViewData["Title"] = "Add Book";
}
<div>
    <h5 class="display-4">Add New Book</h5>
    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center">

            <form asp-controller="home" asp-action="EnterBook" method="post">
                <div class="form-group">
                    <label for="ISBN" class="col-sm-2 col-form-label font-weight-bold">ISBN:</label>
                    <input class="form-control" placeholder="Enter ISBN" asp-for="Isbn" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Title" class="col-sm-2 col-form-label font-weight-bold">Title:</label>
                    <input class="form-control" placeholder="Enter book's title" asp-for="Title" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Author" class="col-sm-2 col-form-label font-weight-bold">Author:</label>
                    <input class="form-control" placeholder="Enter Author's name" asp-for="Author" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Edition" class="col-sm-2 col-form-label font-weight-bold">Edition:</label>
                    <input class="form-control" placeholder="Enter edition" asp-for="Edition" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Publication" class="col-sm-2 col-form-label font-weight-bold">Publication:</label>
                    <input class="form-control" placeholder="Enter Publication" asp-for="Publication" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ImageUrl" class="col-sm-2 col-form-label font-weight-bold">Publication:</label>
                    <input class="form-control" placeholder="Enter Image Url" asp-for="ImageUrl" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-block btn-danger" value="Add Book" />
                </div>
            </form>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>