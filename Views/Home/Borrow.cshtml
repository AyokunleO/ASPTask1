@model Book
@{
    ViewData["Title"] = "Borrow";
}
<div>
    <h5 class="display-4">Borrower's Information</h5>
    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center">

            <form>
                <div class="form-group">
                    <label for="firstName" class="col-sm-2 col-form-label font-weight-bold">First Name:</label>
                    <input class="form-control" placeholder="Enter First Name" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="lastName" class="col-sm-2 col-form-label font-weight-bold">Last Name:</label>
                    <input class="form-control" placeholder="Enter First Name" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="studentId" class="col-sm-2 col-form-label font-weight-bold">Student Id:</label>
                    <input class="form-control" placeholder="Enter student Id" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 col-form-label font-weight-bold">Email Address:</label>
                    <input class="form-control" placeholder="Enter email address" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-controller="home" asp-action="borrower" asp-route-id="@Model.Id" type="submit" class="form-control btn btn-block btn-danger" value="Check Out" />
                </div>
            </form>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>