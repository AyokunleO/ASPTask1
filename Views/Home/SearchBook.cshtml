@model Book;
@{
    ViewData["Title"] = "Search Page";
}

<form asp-controller="home" asp-action="DisplayBook" method="post">
    <div class="form-group">
        <label for="ISBN" class="col-sm-10 col-form-label font-weight-bold">Enter the title of Book to be searched: </label>
        <input class="form-control" placeholder="Title of Book" asp-for="Title" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="form-control btn btn-block btn-danger" value="Search for Book" />
    </div>
</form>
